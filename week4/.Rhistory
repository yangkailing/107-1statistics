#Generate one binomial random variable
Bino.event = function(n, p) {
simp.event = c()
pp = 100*p
for (i in 1:n) {
samp = sample(1:100, 1, replace = T)
# an event with probability p
if (samp <= pp) {
event = 1
} else {
event = 0
}
simp.event[i] = event
}
x = sum(simp.event)
return(x)
}
# Generate a set of binomial random variable
bino.set = c()
for (i in 1:1000) {
bino.set[i] = Bino.event(n = 100000, p = 0.01)
}
